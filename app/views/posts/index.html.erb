<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Data</th>
      <th colspan="3">Acoes</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= image_tag post.image_url, class: 'thumb' if post.image.present? %></td>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete post', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

<style>
.thumb {
  width: 100px!important;
}
</style>
